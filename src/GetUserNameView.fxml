<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GetUserNameViewController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" prefHeight="600.0" prefWidth="800.0" spacing="50.0">
         <children>
            <Label text="Please Enter Your Name Below" textAlignment="CENTER" underline="true">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" prefHeight="72.0" prefWidth="800.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="480.0" text="Username:">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="36.0" prefWidth="800.0" spacing="10.0">
                     <children>
                        <TextField fx:id="userNameField" prefHeight="25.0" prefWidth="400.0" promptText="Enter Name Here" />
                        <Button mnemonicParsing="false" onAction="#saveNameButtonPushed" text="Save Name" />
                     </children>
                  </HBox>
                  <Label fx:id="userNameResponseLabel" prefHeight="17.0" prefWidth="484.0">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
